{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES6",
    "module": "CommonJS",
    "typeRoots": [
      "node_modules/@types",
    ],
  },
  "include": [
    "./src/**/*.ts",
  ]
}